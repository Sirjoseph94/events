generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}


model User {
  id    String  @id  @default(uuid())
  email String  @unique
  name  String
  password String
  isAdmin Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  events Event[]
  registrations Registration[]
}

model Event {
  id String @id  @default(uuid())
  name String 
  location String 
  description String
  startDate DateTime
  endDate DateTime
  isPremium Boolean

  author User @relation(fields: [authorId], references: [id])
  authorId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  eventTypes EventType []
  speakers Speaker[]
  registrations Registration[]
}

model EventType {
  id String @id  @default(uuid())
  name String @unique

  events Event[] 
}

model Speaker {
  id String @id  @default(uuid())
  name String @unique
  designation String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  events Event[]
}

model Registration {
  id String @id  @default(uuid())
  attendee User @relation(fields: [attendeeId], references: [id])
  attendeeId String
  event Event @relation(fields: [eventId], references: [id])
  eventId String
}